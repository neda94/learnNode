<%- include('../includes/header.ejs') %>

<main class="product-list-container">
  <section>
    <h1>Admin products</h1>
    <h2>Available Products</h2>

    <% if (productArr.length > 0) { %>
    <div class="product-grid">
      <% for (let product of productArr) { %>
      <div class="product-card">
        <img
          src="<%= product.imageUrl %>"
          alt="<%= product.title %>"
          class="product-img"
        />

        <div class="product-info">
          <h3><%= product.title %></h3>
          <% if (product.price) { %>
          <p><strong>Price:</strong> $<%= product.price %></p>
          <% } %> <% if (product.description) { %>
          <p><%= product.description %></p>
          <% } %>
        </div>

        <!-- Edit & Delete Buttons -->
        <div class="product-actions">
          <a href="/admin/edit-product" class="edit-link">Edit</a>

          <form
            action="/admin/delete-product"
            method="POST"
            class="delete-form"
          >
            <button type="submit" title="Delete Product">üóëÔ∏è</button>
            <input type="hidden" name="productID" value="<%= product.id%>" />
          </form>
        </div>
      </div>
      <% } %>
    </div>
    <% } else { %>
    <p class="no-product">No products available yet.</p>
    <% } %>
  </section>
</main>

<%- include('../includes/footer.ejs') %>
