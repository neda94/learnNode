<%- include('../includes/header.ejs') %>

<main class="form-container">
  <section>
    <h2>Add a New Product</h2>
    <form method="POST" action="/admin/add-product" class="product-form" enctype="multipart/form-data">
      <div class="form-group">
        <label for="title">Product Title</label>
        <input type="text" id="title" name="title" placeholder="Enter product title" required />
      </div>

      <div class="form-group">
        <label for="price">Price ($)</label>
        <input type="text" id="price" name="price" placeholder="Enter price" required />
      </div>
      <div class="form-group">
        <label for="image">Image Url</label>
        <input type="file" name="image" accept="image/*" required />
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        <input type="text" id="description" name="description" placeholder="Enter product description" required />
      </div>

      <button type="submit" class="submit-btn">Add Product</button>
    </form>
  </section>
</main>

